<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="act1" class="com.stackroute.domain.Actors">
        <constructor-arg index="0" value="sneha"></constructor-arg>
        <constructor-arg index="1" value="female"></constructor-arg>
        <constructor-arg index="2" value="23"></constructor-arg>
    </bean>

    <bean id="act2" class="com.stackroute.domain.Actors">
        <constructor-arg type="String" value="samuel"></constructor-arg>
        <constructor-arg type="String" value="male"></constructor-arg>
        <constructor-arg type="int" value="32"></constructor-arg>
    </bean>

    <bean id="act3" class="com.stackroute.domain.Actors">
        <constructor-arg name="name" value="maria"></constructor-arg>
        <constructor-arg name="gender" value="female"></constructor-arg>
        <constructor-arg name="age" value="16"></constructor-arg>
    </bean>

    <bean name="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actors">
            <list>
                <ref bean="act1"></ref>
                <ref bean="act2"></ref>
            </list>
        </constructor-arg>
    </bean>


    <bean name="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actors">
            <list>
                <ref bean="act1"></ref>
                <ref bean="act2"></ref>
                <ref bean="act3"></ref>
            </list>
        </constructor-arg>
    </bean>


</beans>